<div class="row">
  <div class="col-sm-9">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.ticker %></th>
            <td><%= stock.name %></td>
            <td><%= stock.last_price %></td>
            <td>
              <% if @user == current_user %>
                <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              <% elsif !current_user.under_stock_limit? %>
                <span class="badge badge-warning">You are already tracking 10 stocks</span>
              <% elsif current_user.stock_already_tracked?(stock.ticker) %>
                <span class="badge badge-secondary">Already tracking</span>
              <% else %>
                <%= link_to 'Add to Portfolio', user_stocks_path(user: current_user, ticker: stock.ticker), class: 'btn btn-sm btn-success', method: :post %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
