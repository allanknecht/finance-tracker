<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search for Stocks</h3>
  <%= form_tag search_stocks_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-9">
    <div id="flash-messages"></div>
  </div>
</div>
<div id="results">
  <%= render 'stocks/result' %>
</div>
<% if @tracked_stocks.any? %>
  <%= render 'stocks/list' %>
<% else %>
  <div class="row">
    <div class="col-sm-9">
      <div class="alert alert-info">
        No stocks have been added yet.
      </div>
    </div>
  </div>
<% end %>
