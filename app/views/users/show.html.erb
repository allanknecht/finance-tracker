<h2><%= @user.full_name %>'s Profile</h2>

  <div class="card card-header results-block">
      <div class="d-flex justify-content-between align-items-center py-1">
        <div class="mr-3">
          <strong>Name: </strong> <%= @user.full_name %>
          <strong>Email: </strong> <%= @user.email %>
        </div>
        <div class="ml-auto flex-shrink-0 text-right" style="min-width: 250px;">
          <% unless current_user == @user %>
            <% friendship = current_user.friendships.find_by(friend_id: @user.id) %>
            <% if friendship %>
              <%= link_to 'Unfollow', friendship_path(friendship), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger', style: 'width: 130px; text-align: center;' %>
            <% else %>
              <%= link_to 'Follow', friendships_path(friend: @user), class: 'btn btn-sm btn-success', method: :post, style: 'width: 130px; text-align: center;' %>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>

  <% if @tracked_stocks.any? %>
  <%= render 'stocks/list' %>
<% else %>
  <div class="row">
    <div class="col-sm-9">
      <div class="alert alert-info">
        This user is not tracking any stocks.
      </div>
    </div>
  </div>
<% end %>

