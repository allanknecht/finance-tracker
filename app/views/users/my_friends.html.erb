<h1>My Friends</h1>
<div class="search-area">
  <h3>Search for Friends</h3>
  <%= form_tag search_friends_path, remote:true, method: :get do %>
      <div class="form-group row">
        <div class="col-sm-9 no-right-padding">
          <%= text_field_tag :friend, params[:friend], placeholder: "Enter friend name or email", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3 no-left-padding">
          <%= button_tag type: :submit, class: "btn btn-success" do %>
            <%= fa_icon 'search 2x' %>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-9">
    <div id="flash-messages"></div>
  </div>
</div>
<div id="results">
  <%= render 'friends/result' %>
</div>
<% if @friends.any? %>
  <%= render 'friends/list' %>
<% else %>
  <div class="row">
    <div class="col-sm-9">
      <div class="alert alert-info">
        No friends have been added yet.
      </div>
    </div>
  </div>
<% end %>
